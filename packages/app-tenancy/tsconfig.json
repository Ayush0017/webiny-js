{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/app/*": ["../app/src/*"],
      "@webiny/app": ["../app/src"],
      "@webiny/app-admin/*": ["../app-admin/src/*"],
      "@webiny/app-admin": ["../app-admin/src"],
      "@webiny/plugins/*": ["../plugins/src/*"],
      "@webiny/plugins": ["../plugins/src"],
      "@webiny/ui/*": ["../ui/src/*"],
      "@webiny/ui": ["../ui/src"]
    },
    "baseUrl": "."
  }
}
